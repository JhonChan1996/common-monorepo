{
  "name": "common-monorepo",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "workspaces": [
    "commitlint/**",
    "components/**",
    "docs/**",
    "eslint-config/**",
    "prettier-config/**",
    "request/**",
    "scripts/**",
    "utils/**"
  ],
  "scripts": {
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache --fix",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "eslint": ">= 8"
  },
  "dependencies": {
    "@common/utils": "workspace:*"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@common/commitlint": "workspace:*",
    "@common/eslint-config-base": "workspace:*",
    "@common/prettier-config-base": "workspace:*",
    "cz-git": "^1.4.1",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0"
  },
  "engines": {
    "node": ">= 16"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": [
      "prettier --write",
      "eslint --cache --fix",
      "git add"
    ]
  }
}
